<h3>List of events</h3>
<div class="container">
<div class="cards">

  <% @events.each do |event| %>
<div class="card-trip">
  <%= image_tag event.picture %>
  <div class="card-trip-infos">
    <div>
      <h2><%= link_to "#{event.title}", event_path(event) %></h2>
     <p><%= event.description%></p>
    </div>
    <h2 class="card-trip-pricing"><%= event.date%></h2>
    <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
  </div>

  <%= @events.each do |event| %>
<%= link_to event.title, event_path(event) %>
<%= event.title %>
<%= event.description%>
<%= event.activity%>
<%= event.address%>
<%= event.name_of_place%>
<%= event.number_of_places%>
<%= event.date%>
<%= event.time%>
<%= event.picture%>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
</div>
<% end %>
</div>


<div class="button-container">
 <button class="btn btn-flat my_button">
  <%= link_to "Add a new event", new_event_path %>
</button>
</div>
 </div>

