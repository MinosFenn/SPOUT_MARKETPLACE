<div class="big_container">
  <h3>List of events</h3>
  <div class="container">
    <div class="cards">
      <% @events.each do |event| %>
      <div class="card-trip">
        <%= cl_image_tag(event.picture, crop: :fill) %>
        <div class="card-trip-infos">
          <div>
            <h2><%= link_to "#{event.title}", event_path(event) %></h2>
            <p><%= event.description%></p>
          </div>
          <h2 class="card-trip-pricing"><%= event.date.strftime("%d/%m/%Y") if !event.date.nil?%></h2>
          <h2 class="card-trip-pricing"><%= event.time.strftime("%H:%M") if !event.date.nil?%></h2>
          <%= cl_image_tag (event.organizer.avatar), class: "avatar" %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="button-container">
      <button class="btn btn-flat my_button">
      <%= link_to "Add a new event", new_event_path %>
      </button>
    </div>
  </div>
</div>
