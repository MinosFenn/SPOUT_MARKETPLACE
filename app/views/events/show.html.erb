<div class="big_container">
  <div class="banner_event" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path @event.picture, crop: :fill %>')">

  <div class="container d-flex justify-content-around">
    <div class="background-opacity-white">
    <h1><%= @event.title %></h1>
    <p>Organizer : <%= @event.organizer.firstname %></p>
    <p>Contact : <%= @event.organizer.email %></p>
    <p>Description : <%= @event.description %></p>
    <p>Activity type : <%= @event.activity %></p>
    <p>Place : <%= @event.name_of_place %></p>
    <p>Address : <%= @event.address %></p>
    <p> Number of places : <%= @event.number_of_places %></p>
    <p><%= @event.date.strftime("Date: %d/%m/%Y") %></p>
    <p><%= @event.time.strftime("Time: %H:%M") %></p>
    <% if current_user.id == @event.organizer_id %>
    <%= link_to 'Back to my events', organizer_events_events_path, class: 'btn btn-danger' %>
      <%= link_to 'Edit my event', edit_event_path(@event.id), class: 'btn btn-danger' %>
      <% else %>
      <%= link_to 'Participate', new_event_booking_path(@event.id), class: 'btn btn-danger' %>
      <% end %>
 </div>
</div>




</div>

</div>
